{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ESPHome: Validate config",
      "type": "shell",
      "command": "docker compose run --rm esphome config kotelnik-2026.yaml",
      "problemMatcher": []
    },
    {
      "label": "ESPHome: Build",
      "type": "shell",
      "command": "make build"
    },
    {
      "label": "ESPHome: Flash",
      "type": "shell",
      "command": "make flash"
    },
    {
      "label": "ESPHome: Build + Flash",
      "dependsOn": [
        "ESPHome: Validate config",
        "ESPHome: Build",
        "ESPHome: Flash"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
